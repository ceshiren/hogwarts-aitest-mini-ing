    select * from hogwarts_test_task htt where htt.create_user_id =  #{params.createUserId}

    <if test="params.name != null and params.name != '' ">
      and htt.name = #{params.name}
    </if>
    order by htt.update_time desc
    limit #{pageNum}, #{pageSize}
  </select>

